<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/assign/feedback/aiprompt/db" VERSION="20250111" COMMENT="XMLDB file for assignfeedback_aiprompt"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="assignfeedback_aiprompt" COMMENT="Almacena feedback generado por IA">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="assignment" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="ID de la tarea"/>
        <FIELD NAME="grade" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="ID de la calificación"/>
        <FIELD NAME="aifeedback" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Feedback generado por IA"/>
        <FIELD NAME="isedited" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="1 si el profesor editó el feedback"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="assignment" TYPE="foreign" FIELDS="assignment" REFTABLE="assign" REFFIELDS="id"/>
        <KEY NAME="grade" TYPE="foreign" FIELDS="grade" REFTABLE="assign_grades" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="assignment_grade" UNIQUE="true" FIELDS="assignment,grade"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>